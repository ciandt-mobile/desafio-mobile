<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout
        xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:orientation="vertical"
        android:layout_width="120dp"
        android:layout_height="190dp"
        android:clickable="true"
        android:id="@+id/constraintLayoutView"
        android:background="@color/colorBackgroundDeteail"
        android:layout_margin="5dp">

    <ImageView android:layout_width="match_parent"
               android:layout_height="0dp"
               app:layout_constraintBottom_toTopOf="@+id/text_name_move"
               app:layout_constraintStart_toStartOf="parent"
               app:layout_constraintEnd_toEndOf="parent"
               app:layout_constraintTop_toTopOf="parent"
               android:id="@+id/imageView"/>

    <TextView
            android:id="@+id/text_date_move"
            android:layout_width="60dp"
            android:layout_height="15dp"
            android:text="22/10/2020"
            android:textSize="9sp"
            android:maxLines="2"
            android:gravity="center"
            android:background="@drawable/style_back_color_date"
            android:textColor="@color/colorTitleMove"
            android:layout_marginBottom="8dp" app:layout_constraintBottom_toTopOf="@+id/text_name_move"
            android:layout_marginTop="8dp" app:layout_constraintTop_toTopOf="parent"
            app:layout_constraintEnd_toEndOf="@+id/imageView" android:layout_marginStart="8dp"
            app:layout_constraintStart_toStartOf="@+id/imageView" app:layout_constraintVertical_bias="1.0"/>

    <TextView
            android:id="@+id/text_name_move"
            android:layout_width="match_parent"
            android:layout_height="25dp"
            android:text="Teste\ntesee"
            android:textSize="9sp"
            android:maxLines="2"
            android:gravity="center_vertical"
            android:textColor="@color/colorTitleMove"


            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintHorizontal_bias="0.0" android:layout_marginBottom="2dp"
            app:layout_constraintBottom_toBottomOf="parent" android:layout_marginTop="8dp"
            app:layout_constraintTop_toTopOf="parent" app:layout_constraintVertical_bias="1.0"/>


</androidx.constraintlayout.widget.ConstraintLayout>