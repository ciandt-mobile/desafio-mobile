<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
                name="presenter"
                type="com.ciet.leogg.filmes.presenter.MoviePresenter"/>
    </data>

    <androidx.core.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            tools:context=".view.fragments.DetailsFragment"
            android:background="@color/secondaryLightColor">

        <androidx.constraintlayout.widget.ConstraintLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical">

            <FrameLayout
                    android:id="@+id/big_image_wrapper"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    app:layout_constraintTop_toTopOf="parent"
                    android:layout_marginTop="8dp"
                    android:background="@color/primaryLightColor">

                <com.ciet.leogg.filmes.view.customviews.MyNetworkImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:id="@+id/big_image"
                        android:layout_marginStart="8dp"
                        android:layout_marginEnd="8dp"
                        android:layout_marginBottom="8dp"
                        android:layout_marginTop="8dp"
                        android:scaleType="centerInside"
                        android:src="@drawable/ic_sync_landscape"
                        app:imageUrl="@{presenter.backdropPath}"
                        app:defaultImageResId="@drawable/ic_sync_landscape"
                        app:errorImageResId="@drawable/ic_sync_disabled_landscape"
                        android:contentDescription="@string/backdrop_content_description"/>
            </FrameLayout>

            <ImageView
                    android:layout_width="0dp"
                    android:layout_height="0dp"
                    app:srcCompat="@drawable/vignette_gradient"
                    android:id="@+id/imageView"
                    app:layout_constraintBottom_toBottomOf="@+id/big_image_wrapper"
                    app:layout_constraintEnd_toEndOf="@+id/big_image_wrapper"
                    app:layout_constraintStart_toStartOf="@+id/big_image_wrapper"
                    app:layout_constraintTop_toTopOf="@+id/big_image_wrapper"
                    android:layout_marginStart="8dp"
                    android:layout_marginTop="8dp"
                    android:layout_marginEnd="8dp"
                    android:layout_marginBottom="8dp"
                    android:contentDescription="@null"/>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:layout_constraintTop_toBottomOf="@+id/big_image_wrapper"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginTop="8dp"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    android:id="@+id/card_view_1"
                    app:cardBackgroundColor="@color/primaryLightColor"
                    app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@{presenter.genres}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/genres"
                            app:layout_constraintStart_toStartOf="@+id/guideline5"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/duration"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"/>

                    <TextView
                            android:text="@string/genres_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/genres_label"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/genres"/>

                    <TextView
                            android:text="@{@string/dateOnlyYear(presenter.movie.releaseDate)}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/release_year"
                            app:layout_constraintStart_toStartOf="@+id/duration"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/movie_name"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/duration"/>

                    <TextView
                            android:text="@string/release_year_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/release_year_label"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/release_year"/>

                    <TextView
                            android:text="@{@string/durationFormat(presenter.movie.runtime)}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/duration"
                            app:layout_constraintStart_toStartOf="@+id/genres"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/release_year"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/genres"/>

                    <TextView
                            android:text="@string/duration_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/duration_label"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/duration"/>

                    <TextView
                            android:text="@{presenter.movie.title}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_name"
                            app:layout_constraintStart_toStartOf="@+id/release_year"
                            app:layout_constraintEnd_toEndOf="parent"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintBottom_toTopOf="@+id/release_year"/>

                    <TextView
                            android:text="@string/movie_name_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/movie_name_label"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            app:layout_constraintBaseline_toBaselineOf="@+id/movie_name"/>

                    <androidx.constraintlayout.widget.Guideline
                            android:orientation="vertical"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/guideline5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            app:layout_constraintGuide_percent="0.5"/>

                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_view_2"
                    app:layout_constraintEnd_toEndOf="parent"
                    app:layout_constraintStart_toStartOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@+id/card_view_1"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/primaryLightColor"
                    app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent">

                    <TextView
                            android:text="@{presenter.cast}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_cast"
                            app:layout_constraintTop_toBottomOf="@+id/main_cast_label"
                            android:layout_marginTop="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"/>

                    <TextView
                            android:text="@string/main_cast_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/main_cast_label"
                            app:layout_constraintStart_toStartOf="parent"
                            app:layout_constraintHorizontal_bias="0.5"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            android:layout_marginStart="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

            <androidx.cardview.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:id="@+id/card_view_3"
                    app:layout_constraintStart_toStartOf="parent"
                    app:layout_constraintEnd_toEndOf="parent"
                    android:layout_marginStart="8dp"
                    android:layout_marginEnd="8dp"
                    app:layout_constraintTop_toBottomOf="@id/card_view_2"
                    android:layout_marginTop="8dp"
                    app:cardBackgroundColor="@color/primaryLightColor"
                    app:cardCornerRadius="8dp">

                <androidx.constraintlayout.widget.ConstraintLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        app:layout_constraintStart_toStartOf="parent"
                        app:layout_constraintHorizontal_bias="0.5"
                        app:layout_constraintEnd_toEndOf="parent">

                    <TextView
                            android:text="@string/synopsis_label"
                            android:layout_width="wrap_content"
                            android:layout_height="wrap_content"
                            android:id="@+id/synopsis_label"
                            app:layout_constraintTop_toTopOf="parent"
                            android:layout_marginTop="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"/>

                    <TextView
                            android:text="@{presenter.movie.overview}"
                            android:layout_width="0dp"
                            android:layout_height="wrap_content"
                            android:id="@+id/synopsis"
                            android:layout_marginTop="8dp"
                            app:layout_constraintTop_toBottomOf="@+id/synopsis_label"
                            app:layout_constraintEnd_toEndOf="parent"
                            app:layout_constraintStart_toStartOf="parent"
                            android:layout_marginStart="8dp"
                            android:layout_marginEnd="8dp"
                            app:layout_constraintBottom_toBottomOf="parent"
                            android:layout_marginBottom="8dp"/>
                </androidx.constraintlayout.widget.ConstraintLayout>
            </androidx.cardview.widget.CardView>

        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.core.widget.NestedScrollView>
</layout>