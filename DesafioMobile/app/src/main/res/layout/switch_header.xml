<?xml version="1.0" encoding="utf-8"?>
<RadioGroup xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/toggle"
    android:layout_width="@dimen/switch_width"
    android:layout_height="@dimen/switch_height"
    android:background="@drawable/switch_outline"
    android:checkedButton="@+id/upcoming_button"
    android:orientation="horizontal"
    tools:showIn="@layout/activity_main">

    <RadioButton
        android:id="@+id/upcoming_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginStart="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@drawable/switch_state"
        android:button="@null"
        android:gravity="center"
        android:padding="@dimen/switch_padding"
        android:text="@string/upcoming"
        android:textColor="@drawable/switch_text" />

    <RadioButton
        android:id="@+id/popular_button"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginBottom="1dp"
        android:layout_marginEnd="1dp"
        android:layout_marginTop="1dp"
        android:layout_weight="1"
        android:background="@drawable/switch_state"
        android:button="@null"
        android:gravity="center"
        android:padding="@dimen/switch_padding"
        android:text="@string/popular"
        android:textColor="@drawable/switch_text" />
</RadioGroup>